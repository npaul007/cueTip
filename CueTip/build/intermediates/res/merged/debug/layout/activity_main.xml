<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nate.tipcalculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/txtTotalBill"
                    android:windowSoftInputMode="stateVisible"
                    android:focusable="false"
                    android:editable="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="Your Bill"
                    android:layout_weight="1"
                    android:layout_gravity="left|top"
                    android:layout_column="11" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tip Percentage"
                    android:id="@+id/textView"
                    android:layout_column="11"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="4dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sbTip"
                    android:layout_column="11"
                    android:indeterminate="false"
                    android:layout_marginTop="8dp"
                    android:layout_weight=".2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1%"
                    android:id="@+id/tvTip"
                    android:layout_column="13"
                    android:layout_marginTop="8dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Split Bill"
                    android:id="@+id/textView3"
                    android:layout_column="11"
                    android:layout_marginLeft="4dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sbSplit"
                    android:layout_column="11"
                    android:indeterminate="false"
                    android:layout_marginTop="8dp"
                    android:layout_weight=".2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1"
                    android:id="@+id/tvSplit"
                    android:layout_column="13"
                    android:layout_marginTop="8dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Total Bill"
                    android:id="@+id/textView15"
                    android:layout_column="11"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$0.00"
                    android:id="@+id/tvTotalToPay"
                    android:layout_column="13"
                    android:layout_marginTop="1dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Total Tip"
                    android:id="@+id/textView17"
                    android:layout_column="11"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$0.00"
                    android:id="@+id/tvTotalTip"
                    android:layout_column="13" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bill Per Person"
                    android:id="@+id/textView19"
                    android:layout_column="11"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$0.00"
                    android:id="@+id/tvPerPerson"
                    android:layout_column="13" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tip Per Person"
                    android:id="@+id/textView2"
                    android:layout_column="11"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="$0.00"
                    android:id="@+id/tvTipPerPerson"
                    android:layout_column="13"
                    android:layout_marginBottom="1dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="1"
                android:id="@+id/button1"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="2"
                android:id="@+id/button2"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="3"
                android:id="@+id/button3"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="4"
                android:id="@+id/button4"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:clickable="false"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="6"
                android:id="@+id/button6"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="7"
                android:id="@+id/button7"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="8"
                android:id="@+id/button8"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="9"
                android:id="@+id/button9"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:id="@+id/button0"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="."
                android:id="@+id/dp"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="CLEAR"
                android:id="@+id/clear"
                android:textSize="15dp"
                android:height="20px"
                android:textColor="#fff"
                android:background="#17be9d"
                android:typeface="sans"
                android:layout_margin="5dp"
                android:width="100px"
                android:textStyle="normal|bold"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="4dp"
                android:layout_weight=".25" />

        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            android:layout_marginTop="8dp"
            android:layout_weight=".05">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</RelativeLayout>
