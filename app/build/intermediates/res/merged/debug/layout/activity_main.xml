<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nate.tipcalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Bill"
        android:id="@+id/txtTotalBillw"
        android:windowSoftInputMode="stateVisible"
        android:layout_alignBottom="@+id/txtTotalBill"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtTotalBill"
        android:windowSoftInputMode="stateVisible"
        android:focusable="true"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tip Percent"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/txtTotalBillw" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbTip"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/txtTotalBill"
        android:layout_alignStart="@+id/txtTotalBill"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toLeftOf="@+id/tvPerPerson"
        android:layout_toStartOf="@+id/tvPerPerson" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0%"
        android:id="@+id/tvTip"
        android:layout_alignTop="@+id/sbTip"
        android:layout_alignRight="@+id/txtTotalBill"
        android:layout_alignEnd="@+id/txtTotalBill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Split Bill"
        android:id="@+id/textView3"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbSplit"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/sbTip"
        android:layout_alignEnd="@+id/sbTip"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/sbTip"
        android:layout_alignStart="@+id/sbTip"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/tvSplit"
        android:layout_alignTop="@+id/sbSplit"
        android:layout_alignLeft="@+id/tvTip"
        android:layout_alignStart="@+id/tvTip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total To Pay"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/tvTotalToPay"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Tip"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/tvTotalTip"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/tvTotalToPay"
        android:layout_alignStart="@+id/tvTotalToPay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Per Person"
        android:id="@+id/perPersonLabel"
        android:layout_alignTop="@+id/tvTotalToPay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/tvPerPerson"
        android:layout_alignTop="@+id/tvTotalTip"
        android:layout_alignRight="@+id/tvTip"
        android:layout_alignEnd="@+id/tvTip" />

</RelativeLayout>
